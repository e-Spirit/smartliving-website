<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_GROUP>
    <LANGINFOS>
      <LANGINFO lang="*" label="Product"/>
      <LANGINFO lang="DE" label="Produkt"/>
    </LANGINFOS>

    <FS_INDEX name="st_product" height="1" useLanguages="no">
      <LANGINFOS>
        <LANGINFO lang="*" label=""/>
      </LANGINFOS>
      <SOURCE name="DatasetDataAccessPlugin">
        <TEMPLATE uid="smartliving.product"/>
      </SOURCE>
    </FS_INDEX>

  </CMS_GROUP>

  <CMS_GROUP>
    <LANGINFOS>
      <LANGINFO lang="*" label="Content"/>
    </LANGINFOS>

    <FS_REFERENCE name="st_picture" hFill="yes" imagePreview="yes" sections="no" upload="yes" useLanguages="no">
      <FILTER>
        <ALLOW type="picture"/>
      </FILTER>
      <LANGINFOS>
        <LANGINFO lang="*" label="Image"/>
        <LANGINFO lang="DE" label="Bild"/>
      </LANGINFOS>
      <PROJECTS>
        <LOCAL name=".">
          <SOURCES>
            <FOLDER name="root" store="mediastore"/>
          </SOURCES>
        </LOCAL>
      </PROJECTS>
    </FS_REFERENCE>

    <CMS_INPUT_TOGGLE name="st_ambilight" type="checkbox" hFill="yes" singleLine="no" useLanguages="no">
      <LANGINFOS>
        <LANGINFO lang="*" label="Ambilight"/>
      </LANGINFOS>
      <OFF>
        <LANGINFO lang="*" label="Off"/>
      </OFF>
      <ON>
        <LANGINFO lang="*" label="On"/>
      </ON>
    </CMS_INPUT_TOGGLE>

    <CMS_INPUT_DOM
      name="st_text"
      bold="yes"
      hFill="yes"
      italic="yes"
      list="yes"
      maxCharacters="250"
      table="no"
      useLanguages="yes">
      <FORMATS>
        <TEMPLATE name="p"/>
      </FORMATS>
      <LANGINFOS>
        <LANGINFO lang="*" label="Text"/>
      </LANGINFOS>
      <LINKEDITORS>
        <LINKEDITOR name=""/>
      </LINKEDITORS>
    </CMS_INPUT_DOM>

  </CMS_GROUP>

  <CMS_INPUT_NUMBER name="st_time" type="double" hFill="no" min="0.0" singleLine="yes" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Second of appearance"/>
      <LANGINFO lang="DE" label="Zeitpunkt der Anzeige"/>
    </LANGINFOS>
  </CMS_INPUT_NUMBER>

</CMS_MODULE>